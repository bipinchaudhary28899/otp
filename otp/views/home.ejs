        <style>
           #register{
                display: flex;
                flex-direction: column;
              background-color: white;
                width: 40vw;
               padding: 0 0 0 60px;
               height: 70vh;
              }
           .container-fluid{
               display: flex;
               flex-direction: row;
               justify-content: center;
               padding: 10vh 0 0 0;
               height: 100vh;
               background-color: bisque; 
               
           }
            .abc{
                margin-bottom: -10px;
                margin-left: 20px;
                z-index: 2;
                background-color: white;
                
            }
            input{
                margin: 0 0 15px 0;
                width: 30vw;
                padding: 0 0 0 10px;
                font-size: 16px;
               
            }
            .q{
                height: 40px;
            }
            #n{
                width: 50px;
                padding: 0 0 0 3px;
            }
            #e{
                 width: 45px;
                padding: 0 0 0 3px;
            }
            #m{
                 width: 55px;
                padding: 0 0 0 3px;
            }
            #p{
                 width: 70px;
                padding: 0 0 0 3px;
            }
            #t{
                display: flex;
                flex-direction: row;
               position: relative;
                height: 50px;
            }
             #t input{
                    position: absolute;
                    left:-200px;
                 top:4px;
                
                }
            #t label{
                 position: absolute;
                    left:20px      
            }
            #btn{
               
                width: 100px;
                background-color: transparent;
            }
            h3{
                text-align: center;
                margin: 0 0 0 -50px;
            }
            
       </style>

    </head>
