        <div class="container-fluid">
         
                    <form method="POST" action="/login" id="register" >  <br>
                         <h3>REGISTER</h3><br>
                       <label class="abc" for="name" id="n">Name*</label>
            <input class="q"type="text" name="name" placeholder="Enter your name" required>
                            <label for="mail" class="abc" id="e">Email*</label>
            <input class="q"type="email" placeholder="Enter your Email" name="mail">
                        <label for="mobile" class="abc" id="m">Mobile*</label>
            <input class="q"type="tel" autocomplete="tel" required placeholder="Enter your mobile number" name="mobile">
                        <label for="pass" class="abc" id="p">Password</label>
            <input class="q" type="password" placeholder="Create password" name="pass">
            <div id="t">
                  <input type="checkbox" name="cbox" required >       
                <label for="cbox" >i have read all the terms and conditions*</label>
            
                      
                 </div>
            <button type="submit" style="height: 30px; width: 50pxs;" id="btn"> Register</button>
               
        </form>
            
    </div>

